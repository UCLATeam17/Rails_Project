<%= javascript_include_tag "JamieAppleseed-selectToAutocomplete/jquery.js" %>
  <%= javascript_include_tag "JamieAppleseed-selectToAutocomplete/jquery-ui-autocomplete.js" %>
  <%= javascript_include_tag "JamieAppleseed-selectToAutocomplete/jquery.select-to-autocomplete.min.js" %>
  <script type="text/javascript" charset="utf-8">
    (function($){
      $(function(){
        $('select').selectToAutocomplete();
      });
    })(jQuery);
  </script>


<h2>Edit <%= resource_name.to_s.humanize %></h2>

<%= form_for(resource, :as => resource_name, :url => registration_path(resource_name), :html => { :method => :put }) do |f| %>
  <%= devise_error_messages! %>

<p>
  <div><%= f.label :title %>
  <%= f.select :title, [['Mr'],['Mrs'],['Ms']], :class => "input-mini" %> </div>

  <div><%= f.label :first_name %>
  <%= f.text_field :first_name, :autofocus => true, :class => "input-large"%></div>

  <div><%= f.label :last_name %>
  <%= f.text_field :last_name, :autofocus => true, :class => "input-large"  %></div>

  <div><%= f.label :email %>
  <%= f.email_field :email, :autofocus => true, :class => "input-large" %></div>

  <div><%= f.label :country %>
  <%= f.collection_select :country, Country.all, :id, :name, :class => "input-large" %></div>

  <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
    <div>Currently waiting confirmation for: <%= resource.unconfirmed_email %></div>
  <% end %>

  <div><%= f.label :password %>
  <%= f.password_field :password, :autocomplete => "off" %> <i>(leave blank if you don't want to change it)</i></div>

  <div><%= f.label :password_confirmation %>
  <%= f.password_field :password_confirmation, :class => "input-large" %></div>

  <div><%= f.label :current_password %>
    <%= f.password_field :current_password, :class => "input-large" %> <i>(we need your current password to confirm your changes)</i></div>

  <div ><%= f.submit "Update", :class => "btn btn-primary" %></div>
<% end %>
</p>

<h3>Cancel my account</h3>

<p><%= button_to "Cancel account",  registration_path(resource_name), :data => { :confirm => "Are you sure?" }, :method => :delete, class: "btn btn-secondary" %></p>

<%= link_to "Back", :back %>
